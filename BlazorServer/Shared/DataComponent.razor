@using BlazorServer.Models

<li class="draggable" draggable="true" title="@DataModel.Name" ondragstart="@(()=>HandleDragStart(DataModel))">
    <p class="description">
        @DataModel.Name<br/>
        @DataModel.Cw<br/>
        <small>Update:  @DateTime.Now.ToShortTimeString()</small>
    </p>
</li>

@code {
    [CascadingParameter] DataModelContainer Container { get; set; }
    [Parameter] public DataModel DataModel { get; set; }

    private void HandleDragStart(DataModel dragedModel)
    {
        Container.Payload = dragedModel;
    }

}
