@page "/fetchdata"

@inject MongoDbService mongoService

<PageTitle>Weather forecast</PageTitle>

@using Dash.Mongo.Data
@using Dash.Mongo.Models
@using Dash.Mongo.Services
@using EMobility.Models

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

<EditForm Model="@sessionModel" OnValidSubmit="@HandleValidSubmit">
    <p></p>
    <label>
        Location:
        <InputText id="location" @bind-Value="sessionModel.StationLocation"/>
    </label>

    <label>
        cpId:
        <InputText id="cpId" @bind-Value="sessionModel.CpId"/>
    </label>


    <label>
        Url:
        <InputText id="duration" @bind-Value="sessionModel.StationUrl"/>
    </label>

    <button type="submit">Add Session</button>

</EditForm>

}

