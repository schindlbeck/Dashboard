@page "/fetchdata"

@inject MongoDbService mongoService

<PageTitle>Weather forecast</PageTitle>

@using Dash.Mongo.Data
@using Dash.Mongo.Models
@using Dash.Mongo.Services
@using EMobility.Models

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

<EditForm Model="@sessionModel" OnValidSubmit="@HandleValidSubmit">
    <p></p>
    <label>
        Location:
        <InputText id="location" @bind-Value="sessionModel.Location" />
    </label>

    <label>
        Rfid:
        <InputText id="cpId" @bind-Value="sessionModel.Rfid" />
    </label>
    <label>
        Energy:
        <InputNumber id="duration" @bind-Value="sessionModel.Energy" />
    </label>
    <label>
        Date:
        <InputDate id="date" @bind-Value="sessionModel.DateTime" />
    </label>

    <button type="submit">Add Session</button>

</EditForm>

}

